<%= form_for(@list) do |f| %>
  <ul>
    <% @list.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.fields_for :items, @list.items.build do |fi| %>
    <%= fi.label :name %>
    <%= fi.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
